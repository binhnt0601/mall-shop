# Stage 1: Build
FROM node:18-alpine AS builder

WORKDIR /app

# Copy package files và cài đặt
COPY package*.json ./
RUN npm install

# Copy toàn bộ mã nguồn và build
COPY . .
RUN npm run build

# Stage 2: Run
FROM node:18-alpine

WORKDIR /app

# Copy từ stage build
COPY --from=builder /app ./

EXPOSE 3000
CMD ["yarn", "start"]
